<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
      tal:define="item python:view.items[0]">
  <fieldset class="comprehensive checkboxList">
    <legend><tal:span replace="item/label">Widget label</tal:span> <sup tal:condition="view/required" class="required">*</sup> <dfn class="infoPanel" title="Information" tal:define="description view/field/description" tal:condition="description" tal:content="description"/> 
    </legend>
    <label tal:repeat="item view/items"><input type="checkbox"
      tal:define="checked item/checked"
      tal:attributes="id view/id;
                      name item/name; 
                      value item/value;
                      checked: python:'checked' if checked else None;
                      class view/klass;
                      disabled view/disabled;
                      readonly view/readonly;"
                        /><tal:label i18n:domain="plone" i18n:translate="" replace="item/label"/></label>
    <tal:error condition="view/error" replace="structure view/error/render|nothing"/>
    <input type="hidden" value="1" tal:attributes="name string:${view/name}-empty-marker" />
  </fieldset>
</html>
