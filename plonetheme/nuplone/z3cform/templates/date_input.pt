<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">
  <fieldset class="condensed">
    <legend><tal:span replace="view/label">Widget label</tal:span> <sup tal:condition="view/required" class="required">*</sup> <dfn class="infoPanel" title="Information" tal:define="description view/field/description" tal:condition="description" tal:content="description"/></legend>
    <input type="hidden" value="1" tal:attributes="name string:${view/name}-empty-marker" />

    <ol class="date-eu">
      <li class="day"><label>Day <input type="text" maxlength="2"
          tal:attributes="id string:${view/id}-day;
                          name string:${view/name}-day;
                          value view/day;
                          disabled view/disabled;
                          readonly view/readonly"/></label></li>
      <li class="month"><label>Month
        <select tal:attributes="id string:${view/id}-month;
                                name string:${view/name}-month;
                                disabled view/disabled;
                                readonly view/readonly">
          <option tal:repeat="month view/months"
                  tal:attributes="value item/value; selected python:'selected' if item['selected'] else None"
                  tal;content="item/name">Month</option>
        </select>
      </li>
      <li class="year"><label>Year <input type="text" maxlength="2"
          tal:attributes="id string:${view/id}-year;
                          name string:${view/name}-year;
                          value view/year;
                          disabled view/disabled;
                          readonly view/readonly"/></label></li>
    </ol>
  </fieldset>
</html>

