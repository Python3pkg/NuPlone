<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">
  <label tal:attributes="class view/@@dependencies"><tal:span replace="view/label">Widget label</tal:span> <sup tal:condition="view/required" class="required">*</sup>
    <dfn class="infoPanel" title="Information" tal:define="description view/field/description" tal:condition="description" tal:content="description"/> <textarea
        class="rich"
        tal:attributes="id view/id;
                        name view/name; 
                        disabled view/disabled;
                        readonly view/readonly;
                        cols view/cols;
                        rows view/rows"><p tal:condition="not:view/value">Please enter text here</p><tal:content condition="view/value" replace="structure view/value"/></textarea> <tal:error condition="view/error" replace="structure view/error/render|nothing"/></label>
</html>

